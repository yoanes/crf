<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:util="http://www.springframework.org/schema/util"
        xmlns:aop="http://www.springframework.org/schema/aop"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd
                http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">

    <bean id="map.configurationFactory" 
        class="au.com.sensis.mobile.crf.config.ConfigurationFactoryBean">
        <constructor-arg value="${map.comp.crf.resources.config.classpath}"/>
    </bean>
    
    <bean id="map.resourceSelector" 
        class="au.com.sensis.mobile.crf.service.PathPrefixRestrictedResourceSelectorBean">
        <constructor-arg value="component/map/" />
        <constructor-arg>
            <bean class="au.com.sensis.mobile.crf.service.ResourceSelectorBean">
                <constructor-arg ref="map.configurationFactory"/>
                <constructor-arg ref="crf.resourcePathMapper"/>
                <constructor-arg ref="crf.resourceResolutionWarnLogger"/>
            </bean>                
        </constructor-arg>
    </bean>                
</beans>
