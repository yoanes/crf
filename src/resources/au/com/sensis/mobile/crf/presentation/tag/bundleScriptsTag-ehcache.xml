<?xml version="1.0" encoding="UTF-8"?>
       
<!--
CacheManager Configuration
==========================
-->   
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd"
         updateCheck="false" monitoring="off"
         dynamicConfig="true" >

    <cacheManagerEventListenerFactory class="" properties=""/>

    <!-- 
      - No programatic caches used at the moment. So effectively unset the defaultCache. 
      -->
    <defaultCache
           maxElementsInMemory="0"
           eternal="false"
           overflowToDisk="false"
           memoryStoreEvictionPolicy="LRU">
    </defaultCache>

    <!-- 
      - Cache for ([bundleId, resources], bundle client path) pairs.
      - This amounts to a size limited in memory map that will evict items if the limit is 
      - reached. The limit is simply set to the same size as the resources cache, since the resources
      - cache is relatively small and we can reasonably expect this cache to be about the same or 
      - smaller.
      -->
    <cache
           name="bundleScriptsTagCache"
           maxElementsInMemory="6000"
           eternal="true"
           overflowToDisk="false"
           memoryStoreEvictionPolicy="LRU">
    </cache>

</ehcache>

